@import '~root/variables'

.pagination
  display flex
  margin 0
  padding 5px
  list-style none

  & > *
    margin 2px

.link
  display inline-block
  padding 0 5px;
  border solid 1px gray
  border-radius 5px 
  color blue
  background-color white
  text-decoration none

  &.active
    color white
    background-color blue
